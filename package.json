{
  "name": "whatcoin",
  "version": "0.8.0",
  "description": "A telegram bot providing cryptocurrency price/market info and calculations",
  "author": "David D. Rolle",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "func start",
    "dev": "nodemon -x env-cmd start-dev-server",
    "lint": "eslint \"**/*.js\" && prettier -c \"**/*.{js,css,md,json}\" --ignore-path .gitignore",
    "lint:fix": "eslint --fix \"**/*.js\" && prettier -w \"**/*.{js,css,md,json}\" --ignore-path .gitignore",
    "test": "jest --ci",
    "test:update": "env-cmd jest -u",
    "test:watch": "jest --watchAll",
    "update-deps": "npx ncu -u && npm i && npm run lint && npm t",
    "release": "npx ncu -e2 && npx np --no-publish --no-yarn"
  },
  "dependencies": {
    "coingecko-api": "^1.0.10",
    "serverless-telegram": "^0.5.0",
    "sharp": "^0.27.2",
    "vega": "^5.19.1",
    "vega-lite": "^4.17.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.1.9",
    "filenamify": "^4.2.0",
    "husky": "3",
    "jest": "^26.6.3",
    "jest-image-snapshot": "^4.4.0",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.11",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write"
  }
}
